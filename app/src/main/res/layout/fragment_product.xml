<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragments.ManageProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bbcolor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/purchasedprodfrag"
            android:layout_width="0dp"
            android:backgroundTint="@color/bbcolor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Purchased Item List" />

        <Button
            android:id="@+id/tobuyprod"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bbcolor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Unpurchased Item List" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/pruductmanagerecy"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_height="match_parent" />

</LinearLayout>